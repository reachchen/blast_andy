<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x950"
    android:layout_height="@dimen/x660"
    android:background="@drawable/base_dialog_bg"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include layout="@layout/layout_common_dialog_title" />

    <TextView
        android:id="@+id/tv_describtion"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:padding="@dimen/x10"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/color_332410"
        android:lineSpacingMultiplier = "2"
        android:textSize="@dimen/y34" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x50"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x80"
            android:gravity="center"
            android:text="@string/btn_cancel"
            android:textSize="@dimen/y34"
            android:textColor="@color/color_5f5245"
            android:background="@drawable/common_gradient_gray_btn_selector"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="@string/btn_admit"
            android:textSize="@dimen/winbox_px_34"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/common_gradient_btn_selector"/>
    </LinearLayout>
</LinearLayout>