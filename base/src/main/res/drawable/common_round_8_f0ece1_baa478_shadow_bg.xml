<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/color_f0ece1"
                android:startColor="@color/color_baa478"
                />
            <corners android:radius="@dimen/y8" />
        </shape>
    </item>

    <!-- content -->
    <item
        android:bottom="@dimen/y5">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_f0ece1" />
            <corners android:radius="@dimen/y8" />
        </shape>
    </item>
</layer-list>