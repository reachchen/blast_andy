<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="@dimen/x40" android:height="@dimen/x40" />
                    <stroke android:width="1dp" android:color="#c7bfa1" />
                    <corners android:radius="@dimen/x20" />
                    <solid android:color="#fffdf7" />
                </shape>
            </item>
            <item android:left="@dimen/x10" android:top="@dimen/x10">
                <shape android:shape="rectangle">
                    <size android:width="@dimen/x20" android:height="@dimen/x20" />
                    <corners android:radius="@dimen/x10" />
                    <solid android:color="#fa6a28" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
