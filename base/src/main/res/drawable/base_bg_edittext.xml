<?xml version="1.0" encoding="utf-8"?>
<!--普通输入框-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#f1eee4" />
            <stroke android:width="@dimen/x1" android:color="#d5d5d5" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>
    <!--有错误时,如密码错误等,使用该状态-->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_fffdf7" />
            <stroke android:width="@dimen/x1" android:color="@color/red" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_fffdf7" />
            <stroke android:width="@dimen/x1" android:color="@color/color_967864" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_fffdf7" />
            <stroke android:width="@dimen/x1" android:color="#d5d5d5" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>
</selector>