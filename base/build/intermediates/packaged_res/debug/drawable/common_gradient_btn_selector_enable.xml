<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!--底色-->
            <gradient android:angle="90" android:endColor="@color/gray_unenable" android:startColor="@color/gray_unenable" />
            <!--角度-->
            <corners android:radius="@dimen/x8" />
            <stroke android:color="@color/gray_unenable" android:width="@dimen/x1"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--底色-->
            <gradient android:angle="90" android:endColor="@color/color_fa6a28" android:startColor="@color/color_fa6a28" />
            <!--角度-->
            <corners android:radius="@dimen/x8" />
           <stroke android:color="@color/color_f96b25" android:width="@dimen/x1"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--底色-->
            <gradient android:angle="90" android:endColor="@color/color_f57e07" android:startColor="@color/color_fa6a28" />
            <!--角度-->
            <corners android:radius="@dimen/x8" />
            <stroke android:color="@color/color_f96b25" android:width="@dimen/x1"/>
        </shape>
    </item>
</selector><!--全局文件，改动之前确认-->