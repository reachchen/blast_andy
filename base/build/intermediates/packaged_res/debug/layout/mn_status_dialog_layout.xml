<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_window_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_view_bg"
        android:layout_width="@dimen/x450"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mn_status_dialog_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageStatus"
            android:layout_width="@dimen/y75"
            android:layout_height="@dimen/y75"
            android:layout_marginLeft="@dimen/y10"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@mipmap/pay_success" />

        <TextView
            android:id="@+id/tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/y40"
            android:layout_marginRight="@dimen/y10"
            android:layout_toRightOf="@+id/imageStatus"
            android:text="支付成功"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/y45"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>