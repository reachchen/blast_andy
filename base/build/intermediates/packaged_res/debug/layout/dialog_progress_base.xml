<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="@dimen/x900"
    android:layout_height="@dimen/x600"
    android:background="@drawable/gray_progress_base"
    android:gravity="center"
    android:paddingLeft="@dimen/x80"
    android:paddingRight="@dimen/x80"
    android:paddingBottom="@dimen/x30"
    android:paddingTop="@dimen/x30"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ProgressBar
            android:id="@+id/pb_login"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/animin_progress_base"
            android:indeterminateDuration="2000" />

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:text="加载中..."
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />
    </LinearLayout>
